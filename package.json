{
  "name": "worldskills-ceremonies",
  "version": "1.0.4",
  "main": "main.js",
  "description": "Ceremonies",
  "author": "WorldSkills International",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "dependencies": {
    "@worldskills/bootstrap": "^4.3.3",
    "angular": "^1.5.11",
    "electron-squirrel-startup": "^1.0.0",
    "font-awesome": "^4.7.0",
    "jquery": "^3.4.1",
    "ng-file-upload": "^12.2.13",
    "xlsx": "^0.14.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "@electron-forge/publisher-github": "^6.0.0-beta.65",
    "electron": "^20.0.1",
    "electron-reloader": "^1.2.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Ceremonies",
        "icon": "images/worldskills-hand",
        "appBundleId": "org.worldskills.ceremonies",
        "osxSign": {
          "identity": "Developer ID Application: WorldSkills International (7CQ5662QVR)",
          "hardenedRuntime": true,
          "entitlements": "entitlements.plist",
          "entitlements-inherit": "entitlements.plist",
          "signature-flags": "library"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "worldskills",
              "name": "worldskills-ceremonies"
            },
            "prerelease": false,
            "draft": true
          }
        }
      ]
    }
  }
}
